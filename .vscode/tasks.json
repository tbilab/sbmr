{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build debug w/ g++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++11",
          "-g",
          "src/debugging/debug.cpp",
          "src/Node.cpp",
          "src/Network.cpp",
          "src/SBM.cpp",
          "src/Block_Consensus.cpp",
          "src/Sampler.cpp",
          "-o",
          "src/debugging/debug.out"
        ]
      },
      {
        "label": "Run tests",
        "type": "shell",
        "command": "./src/cpp_tests/run_tests.sh",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Profile Code",
        "type": "shell",
        "command": "./src/profiling/run_profiling.sh",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }